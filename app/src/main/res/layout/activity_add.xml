<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >


        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/fanhui"

            android:layout_gravity="left"


            android:tag="0"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/chinatides_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"

            android:visibility="visible"/>





    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <View
            android:id="@+id/center"
            android:layout_width="2dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp">

        </View>

        <Button
            android:id="@+id/addbutton"
            android:layout_width="160dp"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="增加"
            android:layout_height="40dp">

        </Button>


        <Button
            android:id="@+id/modifybutton"
            android:layout_width="160dp"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@id/center"
            android:layout_marginEnd="10dp"
            android:text="修改"
            android:layout_height="40dp">

        </Button>

        <Button
            android:id="@+id/deletebutton"
            android:layout_width="160dp"
            android:text="删除"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/center"
            android:layout_marginStart="10dp"
            android:layout_height="40dp">


        </Button>






    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_above="@id/submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/time"
                android:layout_width="match_parent"

                android:layout_marginTop="10dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/timetxt"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"

                    android:text="日期"
                    android:textStyle="normal"
                    android:layout_marginStart="5dp"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:id="@+id/timeedixt"
                    android:layout_marginStart="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wechat_name"
                android:layout_width="match_parent"
                android:layout_below="@id/time"

                android:layout_marginTop="10dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/wechat_name_text"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"
                    android:text="微信昵称"
                    android:textStyle="normal"

                    android:layout_marginStart="5dp"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:id="@+id/wechat_name_edixt"
                    android:layout_marginStart="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wechat_num"
                android:layout_width="match_parent"
                android:layout_below="@id/wechat_name"

                android:layout_marginTop="10dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/wechat_num_text"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"
                    android:text="微信号"
                    android:layout_marginStart="5dp"
                    android:textStyle="normal"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:layout_marginStart="80dp"
                    android:id="@+id/wechat_num_edixt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wechat_special"
                android:layout_width="match_parent"
                android:layout_below="@id/wechat_num"

                android:layout_marginTop="10dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/wechat_special_text"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"
                    android:text="微信专享"
                    android:layout_marginStart="5dp"
                    android:textStyle="normal"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:layout_marginStart="80dp"
                    android:id="@+id/wechat_special_edixt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wangwang_num"
                android:layout_width="match_parent"
                android:layout_below="@id/wechat_special"

                android:layout_marginTop="10dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/wangwang_num_text"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"
                    android:text="旺旺号"
                    android:layout_marginStart="5dp"
                    android:textStyle="normal"
                    android:layout_height="60dp">

                </TextView>

                <EditText
                    android:layout_marginStart="80dp"
                    android:id="@+id/wangwang_num_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_below="@id/wangwang_num"

                android:layout_marginTop="10dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/shop_name_text"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"
                    android:text="店铺名称"
                    android:layout_marginStart="5dp"
                    android:textStyle="normal"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:id="@+id/shop_name_edit"
                    android:layout_marginStart="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_below="@id/shop_name"

                android:layout_marginTop="10dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/company_name_text"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"
                    android:text="公司名称"
                    android:layout_marginStart="5dp"
                    android:textStyle="normal"
                    android:layout_height="60dp">

                </TextView>

                <EditText
                    android:layout_marginStart="80dp"
                    android:id="@+id/company_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detect_company"
                android:layout_width="match_parent"
                android:layout_below="@id/company_name"

                android:layout_marginTop="10dp"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/detect_company_text"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"
                    android:text="检测公司"
                    android:textStyle="normal"
                    android:layout_marginStart="5dp"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:id="@+id/detect_company_edit"
                    android:layout_marginStart="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_below="@id/detect_company"

                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/note_text"
                    android:layout_width="70dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/NormalTextColor"
                    android:textSize="16dp"
                    android:text="备注"
                    android:layout_marginStart="5dp"
                    android:textStyle="normal"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:id="@+id/note_edixt"
                    android:layout_marginStart="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>



            </RelativeLayout>











        </RelativeLayout>


    </ScrollView>







</RelativeLayout>